<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_schedule"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="one.dichmann.lectioapp.ScheduleActivity"
    android:orientation="vertical"
    android:background="@color/schedule_Background">

    <LinearLayout
        android:id="@+id/schedule_DayAndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/schedule_DayAndDate_Day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tirsdag"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/schedule_TextColor"/>
        <TextView
            android:id="@+id/schedule_DayAndDate_Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="12/12-16"
            android:textSize="25sp"
            android:textColor="@color/schedule_TextColor"/>
    </LinearLayout>

    <LinearLayout
        android:background="@color/schedule_Empty"
        android:id="@+id/schedule_Block_One"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginTop="10dp"
        android:padding="@dimen/schedule_Module">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="a"
            android:gravity="center"
            android:textColor="@color/schedule_TextColor"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="s"
            android:gravity="center"
            android:textColor="@color/schedule_TextColor"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="d"
            android:gravity="center"
            android:textColor="@color/schedule_TextColor"/>
    </LinearLayout>

    <LinearLayout
        android:background="@color/schedule_Regular"
        android:id="@+id/schedule_Block_Two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/schedule_Block_One"
        android:layout_marginTop="20dp"
        android:padding="@dimen/schedule_Module">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Fag: Matematik A"
            android:gravity="center"
            android:textColor="@color/schedule_TextColor"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Lokale: C3114"
            android:gravity="center"
            android:textColor="@color/schedule_TextColor"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Lærer: Jørn"
            android:gravity="center"
            android:textColor="@color/schedule_TextColor"/>
    </LinearLayout>

    <LinearLayout
        android:background="@color/schedule_Changed"
        android:id="@+id/schedule_Block_Three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/schedule_Block_Two"
        android:layout_marginTop="20dp"
        android:padding="@dimen/schedule_Module">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Fag: Teknologihistorie C"
            android:gravity="center"
            android:textColor="@color/schedule_TextColor"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Lokale: Idk?"
            android:gravity="center"
            android:textColor="@color/schedule_TextColor"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Lærer: No Fucking Body"
            android:gravity="center"
            android:textColor="@color/schedule_TextColor"/>
    </LinearLayout>

    <LinearLayout
        android:background="@color/schedule_Cancelled"
        android:id="@+id/schedule_Block_Four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/schedule_Block_Three"
        android:layout_marginTop="20dp"
        android:textColor="@color/schedule_TextColor"
        android:padding="@dimen/schedule_Module">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Fag: Teknologihistorie C"
            android:gravity="center"
            android:textColor="@color/schedule_TextColor"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Lokale: Idk?"
            android:gravity="center"
            android:textColor="@color/schedule_TextColor"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Lærer: No Fucking Body"
            android:gravity="center"
            android:textColor="@color/schedule_TextColor"/>
    </LinearLayout>
</LinearLayout>
